{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "bit-form": [
        "./src/index.ts"
      ],
      "bit-form/*": [
        "./src/*"
      ]
    }
  }
}