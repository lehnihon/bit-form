    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/vue",
    "rootDir": "src/vue",
    "types": [
      "node",
      "vue"
    ]
  },
  "include": [
    "src/vue/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.core.json"
    }
  ]
}