{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/react-native",
    "rootDir": "src",
    "jsx": "react-native",
    "types": [
      "react-native"
    ]
  },
  "include": [
    "src/react-native/**/*",
    "src/react/**/*"
  ],
  "exclude": [
    "src/react/use-bit-field.ts",
    "src/react/index.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.core.json"
    }
  ]
}