{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/devtools",
    "rootDir": "./src",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": []
  },
  "include": [
    "src/devtools/**/*",
    "src/core/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.core.json"
    }
  ]
}