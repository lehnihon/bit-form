{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/core",
    "rootDir": "src"
  },
  "include": [
    "src/index.ts",
    "src/core/**/*.ts",
    "src/resolvers/**/*.ts",
    "src/devtools/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}