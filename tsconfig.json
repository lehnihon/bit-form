{
  "compilerOptions": {
    "jsx": "react-jsx", 
    "types": ["node", "react", "vitest/globals"], 
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "bit-form": ["src/index.ts"],
      "bit-form/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"], 
  "references": [
    { "path": "./tsconfig.core.json" },
    { "path": "./tsconfig.resolvers.json" },
    { "path": "./tsconfig.react.json" },
    { "path": "./tsconfig.vue.json" },
    { "path": "./tsconfig.angular.json" }
  ]
}